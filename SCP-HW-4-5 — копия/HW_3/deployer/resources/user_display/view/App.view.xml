<mvc:View 
    controllerName="user_display.controller.App" 
    xmlns="sap.m" 
    xmlns:l="sap.ui.layout" 
    xmlns:mvc="sap.ui.core.mvc"
    >
    <Shell>
        <App id = "app">
        <Page
        id="mainPage"
        title = "{i18n>mainPageTitle}"
        class = "sapUiResponsiveContentPadding">
        <content>
            <List
                id="userList"
				headerText="{i18n>listHeader}"
				items="{
					path: 'users>/Users',
					factory: '.listFactory'
				}">
				<ObjectListItem
					id="item"
                    type = "Active"
                    title = "{users>usid}"
                    number = "UserName: {users>name}"
                    press = ".goToDetails">
				</ObjectListItem>
            </List>
        </content>
        </Page>
        </App>  
    </Shell>        
</mvc:View>