<mvc:View 
    controllerName="fridge_display.controller.App" 
    xmlns="sap.m" 
    xmlns:l="sap.ui.layout" 
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:tnt="sap.tnt"
    >
        <App id = "app">
        <Page
        id="mainPage"
        class = "sapUiResponsiveContentPadding"
        title="{i18n>fridgesText}">
    <IconTabBar
		  id="idIconTabBarFiori2"
		  upperCase="true"
		  class="sapUiResponsiveContentPadding">
		<items>
			<IconTabFilter id="createSomePanel"
				text="CREATE">
        <Panel class="sapUiResponsiveMargin" width="auto">
					 	<l:VerticalLayout
		        width="100%">
            <l:content width="100%">
						 		<Label text="{i18n>fridgeBrandNameText}"/>
								<Input id="brandNameInput"/>
								<Label text="{i18n>fridgeCapacityText}"/>
								<Input id="capNameInput"/>
            </l:content>
            <Button text="Create" press=".createFridge" class="sapUiSmallLeftMargin" width="100%"/>
        </l:VerticalLayout>
				</Panel>

			</IconTabFilter>
      <IconTabFilter id="updateSomePanel"
				text="UPDATE">
        <Panel class="sapUiResponsiveMargin" width="auto">
        	<l:VerticalLayout
		        width="100%">
					 	<l:content width="100%">
                <Label text="{i18n>fridgeIdText}"/>
                <Input id="fridInput_U" enabled="false" />
						 		<Label text="{i18n>fridgeBrandNameText}" labelFor="brandNameInput_U"/>
								<Input id="brandNameInput_U" width="100%" required="true"/>
								<Label text="{i18n>fridgeCapacityText}" labelFor="capNameInput_U"/>
								<Input id="capNameInput_U" required="true"/>
						</l:content>
            </l:VerticalLayout>
            <Button text="Update" press=".updateFridge" class="sapUiSmallLeftMargin" width="100%"/>
				</Panel>
			</IconTabFilter>
      
		</items>
	</IconTabBar>
        
          <content>
            <Table id="details" items = "{
              path: 'fridges>/Fridges'
              }" mode="SingleSelectMaster" selectionChange="goToDetails">
          <headerToolbar>
            <Toolbar>
              <Title text="{i18n>mainPageTitle}" level="H2"/>
            </Toolbar>
          </headerToolbar>
        <columns>
          <Column id="fridgeIdColumn">
            <Text text="{i18n>fridgeIdText}" />
          </Column>
          <Column id="fridgeBrandNameColumn">
            <Text text="{i18n>fridgeBrandNameText}" />
          </Column>
          <Column id="fridgeCapacityColumn">
            <Text text="{i18n>fridgeCapacityText}" />
          </Column>
          <Column id="fridgeCreatedColumn">
            <Text text="{i18n>fridgeCreateText}"/>
          </Column>  
          <Column id="fridgeUpdatedColumn">
            <Text text="{i18n>fridgeUpdateText}"/>
          </Column>        
        </columns>
        <items>
          <ColumnListItem press = ".goToDetails">
            <cells>
              <Label text="{fridges>frid}" />
            </cells>
            <cells>
              <Label text="{fridges>bname}" />
            </cells>
            <cells>
              <Label text="{fridges>cap}" />
            </cells>
            <cells>
              <Label text="{fridges>ts_create}" />
            </cells>
            <cells>
              <Label text="{fridges>ts_update}" />
            </cells>          
          </ColumnListItem>
        </items>
      </Table>
    </content>
        </Page>
        </App>        
</mvc:View>