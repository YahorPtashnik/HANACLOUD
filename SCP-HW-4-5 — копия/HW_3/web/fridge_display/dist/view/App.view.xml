<mvc:View 
    controllerName="fridge_display.controller.App" 
    xmlns="sap.m" 
    xmlns:l="sap.ui.layout" 
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:tnt="sap.tnt"
    >
        <App id = "app">
        <Page
        id="mainPage"
        class = "sapUiResponsiveContentPadding"
        title="{i18n>fridgesText}">  
          <content>
            <Table id="details" items = "{
              path: 'fridges>/Fridges'
              }" mode="SingleSelectMaster">
          <headerToolbar>
            <Toolbar>
              <Title text="{i18n>mainPageTitle}" level="H2"/>
            </Toolbar>
          </headerToolbar>
        <columns>
          <Column id="fridgeIdColumn">
            <Text text="{i18n>fridgeIdText}" />
          </Column>
          <Column id="fridgeBrandNameColumn">
            <Text text="{i18n>fridgeBrandNameText}" />
          </Column>
          <Column id="fridgeCapacityColumn">
            <Text text="{i18n>fridgeCapacityText}" />
          </Column>
          <Column id="fridgeCreatedColumn">
            <Text text="{i18n>fridgeCreateText}"/>
          </Column>  
          <Column id="fridgeUpdatedColumn">
            <Text text="{i18n>fridgeUpdateText}"/>
          </Column>
          <Column>
          </Column>     
          <Column>
          </Column>
          <Column>
          </Column>        
        </columns>
        <items>
          <ColumnListItem>
            <cells>
              <Input value="{fridges>frid}" editable="false" />
            </cells>
            <cells>
              <Input value="{fridges>bname}" editable="false" />
            </cells>
            <cells>
              <Input value="{fridges>cap}" editable="false" />
            </cells>
            <cells>
              <Input value="{fridges>ts_create}" editable="false" />
            </cells>
            <cells>
              <Input value="{fridges>ts_update}" editable="false" />
            </cells>
            <cells>
              <Button icon="sap-icon://edit" text="Edit"  press=".goToDetails" enabled="true"/>         
            </cells>
            <cells>
              <Button icon="sap-icon://save" text="Save" press=".updateFridge"  enabled="false"/>
            </cells>
            <cells>
              <Button icon="sap-icon://delete" text="Delete" press=".updateFridge"  enabled="false"/>
            </cells>
          </ColumnListItem>
        </items>
      </Table>
    </content>
        </Page>
        </App>        
</mvc:View>